{% extends 'base.html.twig' %}

{% block body %}
    <div class="row text-center">
        {% if app.user %}
        {% else %}
            <p class="lead">Welcome to LinkShare! Sign-up to start sharing your treasures.</p>
            <p><a class="btn btn-lg btn-success" href="{{ path('fos_user_registration_register') }}" role="button">Sign-up today</a></p>
        {% endif %}
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">Latest submitted links</div>
        <table class="table table-striped">
            <thead>
            <tr>
                <th>User</th>
                <th>Category</th>
                <th>Date Added</th>
                <th>Link</th>
            </tr>
            </thead>
            <tbody>
            {% for link in pagination %}
            <tr>
                <td>{{ link.user }}</td>
                <td>{{ link.category.name }}</td>
                <td>{{ link.publishedAt|date("M d / H:i:s") }}</td>
                <td><a href="{{ link.link }}" target="_blank">{{ link.name }}</a></td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    {# display navigation #}
    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>
{% endblock %}
