{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} role="form" method="POST">
    <fieldset>
        <div class="form-group">
            {{ form_label(form.email, 'E-mail', { 'label_attr': {'class': 'control-label'} }) }}
            <div class="controls">
                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
            </div>
            <p class="help-block">{{ form_errors(form.email) }}</p>
        </div>

        <div class="form-group">
            {{ form_label(form.username, 'Username', { 'label_attr': {'class': 'control-label'} }) }}
            <div class="controls">
                {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
            </div>
            <p class="help-block">{{ form_errors(form.username) }}</p>
        </div>

        <div class="form-group">
            {{ form_label(form.plainPassword.first, 'Password', { 'label_attr': {'class': 'control-label'}}) }}
            <div class="controls">
                {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
            </div>
            <p class="help-block">{{ form_errors(form.plainPassword.first) }}</p>
        </div>

        <div class="form-group">
            {{ form_label(form.plainPassword.second, 'Repeat password', { 'label_attr': {'class': 'control-label'} }) }}
            <div class="controls">
                {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
            </div>
            <p class="help-block">{{ form_errors(form.plainPassword.second) }}</p>
        </div>

        <div class="form-group">
            <!-- Button -->
            <div class="controls">
                <button class="btn btn-lg btn-success">Sign-up</button>
            </div>
        </div>

        {{ form_row(form._token) }}
    </fieldset>
</form>